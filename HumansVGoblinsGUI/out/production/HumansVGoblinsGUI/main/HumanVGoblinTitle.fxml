<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.HumanVGoblinController">

    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <Text text="Hello adventure what is your name?" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <TextField fx:id="name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button fx:id="enterButton" onAction="#sendData" text="Enter" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Note: Hit &quot;stay&quot; button on treasure chest" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>


</GridPane>
